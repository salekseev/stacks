{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/stacks/.+\\.ya?ml$/"
    ]
  },
  "schedule": [
    "before 4am on Monday"
  ],
  "assignees": [
    "@salekseev"
  ],
  "packageRules": [
    {
      "description": "Handle autobrr distroless image tags with a leading v",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/s0up4200/autobrr-distroless"
      ],
      "versioning": "semver",
      "extractVersion": "^v(?<version>.*)$"
    },
    {
      "description": "Handle qui image tags with release-v prefix",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/hotio/qui"
      ],
      "versioning": "semver",
      "extractVersion": "^release-v(?<version>.*)$"
    },
    {
      "description": "Group all non-major Docker updates together",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker non-major updates"
    },
    {
      "description": "Major updates get their own PRs for review",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "prConcurrentLimit": 5
}
