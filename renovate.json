{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/stacks/.+\\.ya?ml$/"
    ]
  },
  "schedule": [
    "before 4am on Monday"
  ],
  "assignees": [
    "@salekseev"
  ],
  "packageRules": [
    {
      "description": "Pin digests for rolling tags to track underlying image changes",
      "matchDatasources": [
        "docker"
      ],
      "matchCurrentValue": "/^(latest|plexpass)$/i",
      "pinDigests": true
    },
    {
      "description": "Parse version from hotio images and preserve release- prefix",
      "matchDatasources": [
        "docker"
      ],
      "versionCompatibility": "^release-v?(?<version>.*)$",
      "matchPackageNames": [
        "ghcr.io/hotio/{/,}**"
      ]
    },
    {
      "description": "Group minor updates together",
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "Minor updates"
    },
    {
      "description": "Automerge patch updates",
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "labels": [
        "dependencies",
        "renovate",
        "automerge"
      ]
    },
    {
      "description": "Major updates get their own PRs for review",
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "prConcurrentLimit": 5
}
